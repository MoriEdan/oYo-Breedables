       <field name="created_by" type="createdby" default="" 
            label="COM_BREEDABLE_FORM_LBL_BUNDLE_CREATED_BY"
            description="COM_BREEDABLE_FORM_DESC_BUNDLE_CREATED_BY"  /> 

 </fieldset> 

 <fieldset 
                        name="accesscontrol">
