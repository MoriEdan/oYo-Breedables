            label="COM_BREEDABLE_FORM_LBL_BUNDLE_BREED"
            description="COM_BREEDABLE_FORM_DESC_BUNDLE_BREED" 
                
                
                 required="true" 
            menu_published="0"
            filter="string" /> 

