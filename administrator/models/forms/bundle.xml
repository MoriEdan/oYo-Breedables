                 required="true" >
                <option value="1">On</option>
                <option value="0">Off</option>
        </field> 

 
		<field name="filter_sound" type="list" onchange="this.form.submit();">
			<option value="">COM_BREEDABLE_BUNDLES_SOUND_FILTER</option>
